@model EwiPraca.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Resetowanie hasła";
}

@section navigation{

    @Html.Partial("_Menu", new MenuViewModel())
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Ustaw swoje hasło.</h4>
    <hr />    
    @Html.HiddenFor(model => model.Guid)
    @Html.HiddenFor(model => model.Email)
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <p style="color:red">@Html.ValidationSummary("", new { @class = "text-danger" })</p>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Potwierdź" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}