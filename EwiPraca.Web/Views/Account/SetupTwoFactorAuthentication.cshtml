@model EwiPraca.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Ustaw logowanie dwuskładnikowe";
}

@section navigation{

    @Html.Partial("_Menu", new MenuViewModel())
}

<h2>@ViewBag.Title.</h2>
<h4>Zeskanuj kod w aplikacji Google Authenticator lub wpisz ciąg znaków z pola Manual Code. Aplikacja do pobrania <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&hl=pl">tutaj</a>.
     Następnie wpisz kod podany w aplikacji poniżej.</h4>
<div class="row">
    <div class="form-group">
        <div class="col-md-10">
            <img src="@ViewBag.BarcodeImageUrl" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            Manual Setup Code : @ViewBag.SetupCode
        </div>
    </div>
    <br />
    @using (Html.BeginForm("TwoFactorAuthenticateSetup", "Account", FormMethod.Post))
    {
        <div class="form-group">
            <div class="col-md-10">
                <input type="text" name="CodeDigit" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Wyślij" class="btn btn-default" />
            </div>
        </div>
    }
</div>