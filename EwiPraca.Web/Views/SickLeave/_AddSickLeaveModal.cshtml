@model EwiPraca.Models.SickLeaveViewModel

<div class="modal-wrapper">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" id="closbtnsleave">×</button>
        <h4 class="modal-title" id="myModalLabel">Dodaj zwolnienie lekarskie</h4>
    </div>
    @using (Ajax.BeginForm("AddSickLeave", "SickLeave", new AjaxOptions() { HttpMethod = "POST", OnSuccess = "onSickLeaveAddSuccess", OnFailure = "onFailureModalEdit" })) // { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.EditorFor(x => x)
    }
</div>

<script type="text/javascript">
    function onSickLeaveAddSuccess(e) {
        if (e.Success == "true") {           
            showLoader();
            var options = { "backdrop": "static", keyboard: true };
            var data = { employeeId: @Model.EmployeeId }
            $.ajax({
                type: "GET",
                url: "@Url.Action("EditEmployeeView", "Employee")",
                contentType: "application/json",
            data: data,
            datatype: "json",
            success: function (data) {
                $('#edit-employee-modal-content').html(data);
                $('#edit-employee-modal').modal(options);                
                $('#add-sick-leave-modal').modal('hide');
                $('#edit-employee-modal').modal('show');
                hideLoader();
            },
            error: function () {
                hideLoader();
                alert("Dynamic content load failed.");
            }
        });
        }
        else {
            showErrorMessage(e.Message);
        }
    }
    $(document).ready(function () {
        $("#closbtnsleave").click(function () {
            $('#edit-employee-modal').modal('show');
        });
    });
</script>
