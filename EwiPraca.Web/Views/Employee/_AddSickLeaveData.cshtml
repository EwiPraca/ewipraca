@model int
<script type="text/javascript">
    $("#open-add-employee-sick-leave-modal").click(function () {
        showLoader();
        var options = { "backdrop": "static", keyboard: true };
        var data = { employeeId: @Model }
        $.ajax({
            type: "GET",
            url: "@Url.Action("AddSickLeaveView", "SickLeave")",
            contentType: "application/json",
            data: data,
            datatype: "json",
            success: function (data) {
                $('#edit-employee-modal').modal('hide');
                $('#add-sick-leave-modal-content').html(data);
                $('#add-sick-leave-modal').modal(options);
                $('#add-sick-leave-modal').modal('show');
                hideLoader();
            },
            error: function (e) {
                debugger;
                hideLoader();
                alert("Dynamic content load failed.");
            }
        });
    });

    $("#closbtn").click(function () {
        $('#add-sick-leave-modal').modal('hide');
    });
</script>