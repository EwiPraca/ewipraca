@model EwiPraca.Models.OSHTrainingViewModel

@Html.HiddenFor(x => x.Id)
@Html.HiddenFor(x => x.EmployeeId)

@Html.HiddenFor(x => x.CreatedDate)
@Html.HiddenFor(x => x.UpdatedDate)

<div class="row modal-row">
    @Html.LabelFor(m => m.CompletionDate, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.EditorFor(m => m.CompletionDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CompletionDate)
    </div>
</div>
<div class="row modal-row">
    @Html.LabelFor(m => m.NextCompletionDate, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.EditorFor(m => m.NextCompletionDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NextCompletionDate)
    </div>
</div>
<div class="row modal-row">
    @Html.LabelFor(m => m.Notes, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextAreaFor(m => m.Notes, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Notes)
    </div>
</div>
<div class="row modal-row">
    <div class="col-md-12">
        <div class="float-right">
            <input type="submit" class="btn btn-default" value="Zapisz" />
        </div>
    </div>
</div>