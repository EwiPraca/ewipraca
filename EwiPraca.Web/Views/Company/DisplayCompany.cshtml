@using EwiPraca.Enumerations
@model EwiPraca.Models.UserCompanyViewModel
@{
    ViewBag.Title = "Dane firmy";
}

@section navigation{
    @Html.Partial("_Menu", new MenuViewModel() { MyProfileSelected = true })
}

<header class="page-header">
    <h1 class="page-title align-center">@Model.CompanyName</h1>
</header>

<h2 class="slogan align-center">
    Tutaj możesz edytować dane swojej firmy.
</h2>

<section id="main">
    <article class="entry clearfix">
        @using (Html.BeginForm("DisplayCompany", "Company", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Id);
            @Html.HiddenFor(m => m.UserCompanyAddress.Id);
            @Html.HiddenFor(m => m.CreatedDate);
            @Html.HiddenFor(m => m.ApplicationUserID);
            @Html.HiddenFor(m => m.CompanyName);
            <span class="acc-trigger">
                <a href="#">Adres</a>
            </span>

            <div class="acc-container">
                <div class="content">
                    <div class="row">
                        @Html.LabelFor(m => m.UserCompanyAddress.StreetName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.UserCompanyAddress.StreetName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.UserCompanyAddress.StreetName)
                        </div>
                    </div>
                    <div class="row">
                        @Html.LabelFor(m => m.UserCompanyAddress.StreetNumber, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.UserCompanyAddress.StreetNumber, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.UserCompanyAddress.StreetNumber)
                        </div>
                    </div>
                    <div class="row">
                        @Html.LabelFor(m => m.UserCompanyAddress.PlaceNumber, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.UserCompanyAddress.PlaceNumber, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.UserCompanyAddress.PlaceNumber)
                        </div>
                    </div>
                    <div class="row">
                        @Html.LabelFor(m => m.UserCompanyAddress.City, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.UserCompanyAddress.City, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.UserCompanyAddress.City)
                        </div>
                    </div>
                    <div class="row">
                        @Html.LabelFor(m => m.UserCompanyAddress.ZIPCode, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.UserCompanyAddress.ZIPCode, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.UserCompanyAddress.ZIPCode)
                        </div>
                    </div>
                    <div>
                        <input type="submit" class="button" value="Zapisz">
                    </div>
                </div>
            </div>

            <span class="acc-trigger">
                <a href="#">Inne dane</a>
            </span>

            <div class="acc-container">
                <div class="content">
                    <div class="row">
                        @Html.LabelFor(m => m.NIP, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.NIP, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.NIP)
                        </div>
                    </div>
                    <div class="row">
                        @Html.LabelFor(m => m.REGON, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.REGON, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.REGON)
                        </div>
                    </div>
                    <div class="row">
                        @Html.LabelFor(m => m.KRS, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.KRS, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.KRS)
                        </div>
                    </div>
                    <input type="submit" class="button" value="Zapisz">
                </div>
            </div>

            <span class="acc-trigger">
                <a href="#">Notatki</a>
            </span>

            <div class="acc-container">
                <div class="content">
                    <div class="row">
                        @Html.EditorFor(m => m.Notes, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Notes)
                    </div>
                    <input type="submit" class="button" value="Zapisz">
                </div>
            </div>

            @Html.ValidationSummary();
        }
        </article>
</section>

<aside id="sidebar">

    <div class="widget">

        <h6 class="widget-title">Kategorie</h6>

        <ul class="categories">
            <li><a href="@Url.Action("Index", "Employee", new { id = Model.Id, viewType = EmployeeListTypes.Default } )">Pracownicy</a></li>
            <li><a href="@Url.Action("Index", "Employee", new { id = Model.Id, viewType = EmployeeListTypes.MedicalResults } )">Badania lekarskie</a></li>
            <li><a href="@Url.Action("Index", "Employee", new { id = Model.Id, viewType = EmployeeListTypes.OSHTrainings } )">Szkolenia BHP</a></li>
            <li><a href="@Url.Action("Index", "Employee", new { id = Model.Id, viewType = EmployeeListTypes.SickLeaves } )">Zwolnienia lekarskie</a></li>
            <li><a href="#">Urlopy</a></li>
        </ul>
    </div><!-- end .widget -->
</aside>

<div class="row last-row">
    <p class="align-center">
        <a href="@Url.Action("MyProfile", "Manage")" class="button"><span class="glyphicon"></span>Powrót</a>
    </p>
</div>